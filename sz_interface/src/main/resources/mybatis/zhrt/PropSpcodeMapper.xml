<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhrt.dao.PropSpcodeDao">

	<!-- 表名 -->
	<sql id="base_table" > 
	    infopropspcode
	</sql>  
	
	<!-- 插入字段 -->
	<sql id="insert_field_list">
		id,
		propId,
		spcodeId,
		spcodeSeq,
		createPerson,
		createTime,
		lastUpdatePerson,
		lastUpdateTime
	</sql>

	<!-- 查询字段 -->
	<sql id="select_field_list">
		id,
		propId,
		spcodeId,
		spcodeSeq,
		createPerson,
		createTime,
		lastUpdatePerson,
		lastUpdateTime
	</sql>
	
	<!-- 查询总数字段 -->
	<sql id="select_field_count">
		count(*)
	</sql>
	
	<!-- 查询条件where -->
	<sql id="select_condition_where">
		where  1=1 
			<if test="id != null and id != ''">  
			 and id=#{id} 
			</if>
			<if test="propId != null and propId != ''">  
			 and propId=#{propId} 
			</if>
			<if test="spcodeId != null and spcodeId != ''">  
			 and spcodeId=#{spcodeId} 
			</if>
			<if test="spcodeSeq != null">  
			 and spcodeSeq=#{spcodeSeq} 
			</if>
			<if test="createPerson != null and createPerson != ''">  
			 and createPerson=#{createPerson} 
			</if>
			<if test="createTime != null and createTime != ''">  
			 and createTime=#{createTime} 
			</if>
			<if test="lastUpdatePerson != null and lastUpdatePerson != ''">  
			 and lastUpdatePerson=#{lastUpdatePerson} 
			</if>
			<if test="lastUpdateTime != null and lastUpdateTime != ''">  
			 and lastUpdateTime=#{lastUpdateTime} 
			</if>
	</sql> 

	<!-- 查询条件orderby和limit等 -->
	<sql id="select_condition_orderlimit">
		<if test="orderBy != null and  orderBy != '' and order != null and  order != '' ">  
			 order by ${orderBy} ${order} 
		</if>
		<if test="limitB != null and  limitB >= 0 and limitNum != null and  limitNum >= 0 ">  
			 limit #{limitB},#{limitNum} 
		</if>
	</sql> 
		
	<!-- 查询单条数据 -->
	<select id="get" parameterType="map" resultType="com.zhrt.entity.PropSpcode">
		SELECT <include refid="select_field_list" /> 
		from <include refid="base_table"/>  
		<include refid="select_condition_where"/> 
		limit 1
	</select> 
	<!-- 查询某个产品下的所有道具 -->
	<select id="getPropsByAppId" parameterType="map" resultType="com.zhrt.entity.PropSpcode">
	    SELECT <include refid="select_field_list" /> 
		from <include refid="base_table"/>
		<include refid="select_condition_where"/> 
		order by propCode DESC	
	</select>	
	<!-- 查询多条数据 -->
	<select id="getList" parameterType="map" resultType="com.zhrt.entity.PropSpcode">
		SELECT 
		id,
		propId,
		spcodeId,
		spcodeSeq,
		createPerson,
		createTime,
		lastUpdatePerson,
		lastUpdateTime
		from <include refid="base_table"/> 
		<include refid="select_condition_where"/>
		<include refid="select_condition_orderlimit" />
	</select> 
	
	
	<!-- 查询多条数据总条数 -->
	<select id="getListCount" parameterType="map" resultType="int">
		SELECT <include refid="select_field_count" />
		from <include refid="base_table"/> 
		<include refid="select_condition_where"/>
	</select> 
	
	<insert id="add" parameterType="com.zhrt.entity.PropSpcode">
	  <selectKey resultType="String" order="BEFORE" keyProperty="id">  
	    SELECT UUID_SHORT() as id;   
	  </selectKey>
	  insert into  <include refid="base_table" />
	  ( <include refid="insert_field_list" /> )  
	 values( 
		#{id},
		#{propId},
		#{spcodeId},
		#{spcodeSeq},
		#{createPerson},
		#{createTime},
		#{lastUpdatePerson},
		#{lastUpdateTime}
	 )  
	</insert>  


	<!-- 修改信息，只修改只不为空的字段 -->  
	<update id="update" parameterType="com.zhrt.entity.PropSpcode" >  
	    update <include refid="base_table" /> 
	    set
			<if test="propId != null and propId !='null'">  
			 propId=#{propId},
			</if>
			<if test="spcodeId != null and spcodeId !='null'">  
			 spcodeId=#{spcodeId},
			</if>
			<if test="spcodeSeq != null">  
			 spcodeSeq=#{spcodeSeq},
			</if>
			<if test="lastUpdatePerson != null and lastUpdatePerson !='null'">  
			 lastUpdatePerson=#{lastUpdatePerson},
			</if>
			<if test="lastUpdateTime != null and lastUpdateTime !='null'">  
			 lastUpdateTime=#{lastUpdateTime} ,
			</if>
			id=#{id}
	    where id=#{id}
	</update>
	  	
	<select id="dynamicSql" parameterType="map" resultType="com.zhrt.entity.Spcode">
	  ${dynamicSql}
	</select>

	<!-- 删除信息 -->  
	<delete id="delById" parameterType="Object">
		delete from <include refid="base_table" />  
	    where id=#{id}
	</delete>

	<!-- 批量删除信息 -->  
	<delete id="delBatch" parameterType="Object">
		delete from <include refid="base_table" />  
	    where
	    <if test="ids != null">
	    	id in
	    	 <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
				#{item}
			</foreach>  
			and
	    </if>
	    <if test="id != null">
			id=#{id}  and
	    </if>
	    1=1
	</delete>
</mapper> 
