<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.power.dao.PowerUserDao">

	<sql id="base_table" > 
	    power_user
	</sql>  
	
	
	<sql id="insert_field_list">
		id,        
		loginId,   
		loginName, 
		loginPwd,  
		status,    
		email,     
		phone,
		platId,
		domainId
	 </sql>


	<sql id="select_field_list">
		id,        
		loginId,   
		loginName, 
		loginPwd,  
		status,    
		email,     
		phone,    
		platId, 
		domainId
	</sql>
	
	<!-- 查询总数字段 -->
	<sql id="select_field_count">
		count(*)
	</sql>
	
	<!-- 查询条件where -->
	<sql id="select_condition_where">
		where  1=1 
		    <if test="id != null and  id != ''">  
			 and id=#{id} 
			</if>
		    <if test="loginId != null and  loginId != ''">  
			 and loginId=#{loginId} 
			</if>
		    <if test="loginName != null and  loginName != ''">  
			 and loginName=#{loginName} 
			</if>
		    <if test="loginPwd != null and  loginPwd != ''">  
			 and loginPwd=#{loginPwd} 
			</if>
		    <if test="status != null">  
			 and status=#{status} 
			</if>
		    <if test="email != null and  email != ''">  
			 and email=#{email} 
			</if>
		    <if test="phone != null and  phone != ''">  
			 and phone=#{phone} 
			</if>
		    <if test="platId != null ">  
			 and platId=#{platId} 
			</if>
		    <if test="domainId != null and  domainId != ''">  
			 and domainId=#{domainId} 
			</if>
	</sql> 
	
	<!-- 查询条件orderby和limit等 -->
	<sql id="select_condition_orderlimit">
		<if test="orderBy != null and  orderBy != '' and order != null and  order != '' ">  
			 order by ${orderBy} ${order} 
		</if>
		<if test="limitB != null and  limitB >= 0 and limitNum != null and  limitNum >= 0 ">  
			 limit #{limitB},#{limitNum} 
		</if>
	</sql> 


	<select id="get" parameterType="map" resultType="PowerUser">
		SELECT <include refid="select_field_list" /> 
		from <include refid="base_table"/>  
		<include refid="select_condition_where"/> 
		limit 1
	</select> 
	
	<!-- 查询多条数据 -->
	<select id="getList" parameterType="map" resultType="PowerUser">
		SELECT <include refid="select_field_list" />
		from <include refid="base_table"/>
		<include refid="select_condition_where"/>
		<include refid="select_condition_orderlimit" />
	</select>
	
	<!-- 查询多条数据总条数 -->
	<select id="getListCount" parameterType="map" resultType="int">
		SELECT <include refid="select_field_count" />
		from <include refid="base_table"/> 
		<include refid="select_condition_where"/>
	</select> 
	
	
	<insert id="add" parameterType="map" > 
	  <selectKey resultType="string" order="BEFORE" keyProperty="id">  
	    SELECT UUID_SHORT() as id ;   
	  </selectKey>    
	  insert into  <include refid="base_table" />
	  ( <include refid="insert_field_list" /> )  
	 values( 
		#{id},
		#{loginId},
		#{loginName},
		#{loginPwd},
		#{status},
		#{email},
		#{phone},
		#{platId},
		#{domainId}
	 )  
	</insert>  


	<!-- 修改账户信息，只修改只不为空的字段 -->  
	<update id="update" parameterType="Object" >  
	    update <include refid="base_table" /> 
	    set  
	    <if test="loginId != null and loginId !='null'">  
			loginId=#{loginId},  
	    </if> 
	    <if test="loginName != null and loginName !='null'">  
			loginName=#{loginName},  
	    </if> 
	    <if test="loginPwd != null and loginPwd !='null'">  
			loginPwd=#{loginPwd},
	    </if> 
	    <if test="status != null">  
			status=#{status},  
	    </if> 
	    <if test="email != null and email !='null'">  
			email=#{email},  
	    </if> 
	    <if test="phone != null and phone !='null'">  
			phone=#{phone},  
	    </if> 
	    <if test="platId != null">  
			platId=#{platId},  
	    </if> 
	    <if test="domainId != null and domainId !='null'">  
			domainId=#{domainId},  
	    </if> 
	    	id=id 
	    where id=#{id}   
	</update>
	  	
	<!-- 删除用户账户信息 -->  
	<delete id="delById" parameterType="Object">
		delete from <include refid="base_table" />  
	    where id=#{id}
	</delete>

	<!-- 批量删除用户账户信息 -->  
	<delete id="delMul" parameterType="Object">
		delete from <include refid="base_table" />  
	    where
	    <if test="ids != null">
	    	id in
	    	 <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">  
				#{item}
			</foreach>  
			and
	    </if>
	    <if test="id != null">
			id=#{id}  and
	    </if>
	    1=1
	</delete>
</mapper> 
